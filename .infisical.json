{
  "$schema": "https://infisical.com/schemas/infisical.json",
  "workspaceId": "",
  "defaultEnvironment": "dev",
  "gitBranchLinking": {
    "feat/*": "dev",
    "fix/*": "dev", 
    "develop": "dev",
    "release/*": "staging",
    "main": "prod"
  },
  "services": {
    "web": {
      "path": "apps/web",
      "environments": ["dev", "staging", "prod"]
    },
    "strands-agent": {
      "path": "services/strands-agent", 
      "environments": ["dev", "staging", "prod"],
      "requiredSecrets": [
        "AWS_REGION",
        "AWS_ACCESS_KEY_ID", 
        "AWS_SECRET_ACCESS_KEY",
        "BEDROCK_MODEL_ID"
      ]
    },
    "genkit-service": {
      "path": "services/genkit-service",
      "environments": ["dev", "staging", "prod"], 
      "requiredSecrets": [
        "GOOGLE_API_KEY",
        "GENKIT_ENV"
      ]
    }
  },
  "environments": {
    "dev": {
      "description": "Local development environment",
      "railway": false
    },
    "staging": {
      "description": "Staging environment on Railway", 
      "railway": true,
      "railwayService": "proposal-prepper-staging"
    },
    "prod": {
      "description": "Production environment on Railway",
      "railway": true, 
      "railwayService": "proposal-prepper-prod"
    }
  },
  "secretsPath": ".env",
  "includeImports": true
}
