{
  "_comment": "SPDX-License-Identifier: AGPL-3.0-or-later",
  "_copyright": "SPDX-FileCopyrightText: 2025 Seventeen Sierra LLC",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@17sierra/ui": [
        "./packages/ui/src"
      ],
      "@17sierra/lib": [
        "./packages/lib/src"
      ],
      "@17sierra/ai-flows": [
        "./packages/ai-flows/src"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "vite-env.d.ts",
    "vitest-env.d.ts",
    "src/test-utils/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.stories.tsx",
    "vitest.config.ts",
    ".inbox/**/*"
  ]
}
